@using Microsoft.AspNet.Identity;
@model List<Carts.Models.Product>
@{
    ViewBag.Title = "購物首頁";
    var UserID = User.Identity.GetUserId();
    var UserName = User.Identity.Name;
}

<!DOCTYPE HTML>
<!--
    Hielo by TEMPLATED
    templated.co @@templatedco
    Released for free under the Creative Commons Attribution 3.0 license (templated.co/license)
-->
<html>
<head>
    <title>Hielo by TEMPLATED</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/assets/css/main.css" />
</head>


<section class="banner full">
    <article>
        <img src="~/images/咖啡002.jpg" alt="" />
        <div class="inner">
            <header>
               
                <h2>コーヒー</h2>
            </header>
        </div>
    </article>
    <article>
        <img src="~/images/咖啡001.jpg" alt="" />
        <div class="inner">
            <header>
                
                <h2>The Antique Cave</h2>
            </header>
        </div>
    </article>



</section>
<div class="row">
    @foreach (var product in this.Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img class="ProductImg" src="@product.DefaultImageURL" alt="商品圖片">
                <div class="caption">
                    <h3>@product.Name</h3>
                    <p>@product.Description</p>
                    <p>售價 : @product.Price</p>
                    <p>庫存 : @product.Quantity</p>
                    <p>
                        <a onclick="AddToCart('@product.Id')" href="javascript:void(0);"
                           class="btn btn-primary" role="button">
                            加入購物車
                        </a>
                        <a href="@Url.Action("Details", new { id = product.Id })" class="btn btn-default" role="button">
                            詳細資訊
                        </a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>


<!-- Scripts -->
<script src="/assets/js/jquery.min.js"></script>
<script src="/assets/js/jquery.scrollex.min.js"></script>
<script src="/assets/js/skel.min.js"></script>
<script src="/assets/js/util.js"></script>
<script src="/assets/js/main.js"></script>
